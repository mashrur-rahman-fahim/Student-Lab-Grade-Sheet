using System;

namespace StudentLabGradeSheet
{
    public class Student
    {
        public string RollNo { get; set; }
        public string Name { get; set; }
        public int Attendance { get; set; } // Out of 20
        public int Online { get; set; } // Out of 10
        public int Assignment { get; set; } // Out of 20
        public int Project { get; set; } // Out of 50
        
        public int Total => Attendance + Online + Assignment + Project;
        
        public string Grade
        {
            get
            {
                double percentage = (Total / 100.0) * 100;
                return percentage switch
                {
                    >= 97 => "A+",
                    >= 93 => "A",
                    >= 90 => "A-",
                    >= 87 => "B+",
                    >= 83 => "B",
                    >= 80 => "B-",
                    >= 77 => "C+",
                    >= 73 => "C",
                    >= 70 => "C-",
                    >= 67 => "D+",
                    >= 60 => "D",
                    _ => "F"
                };
            }
        }

        public Student()
        {
            RollNo = "";
            Name = "";
            Attendance = 0;
            Online = 0;
            Assignment = 0;
            Project = 0;
        }

        public Student(string rollNo, string name, int attendance = 0, int online = 0, int assignment = 0, int project = 0)
        {
            RollNo = rollNo;
            Name = name;
            Attendance = attendance;
            Online = online;
            Assignment = assignment;
            Project = project;
        }
    }
}